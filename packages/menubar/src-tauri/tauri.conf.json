{
  "$schema": "https://raw.githubusercontent.com/nicegui/nicegui/main/tauri-conf-schema.json",
  "productName": "Hexdeck",
  "version": "0.2.0",
  "identifier": "dev.hexdeck.menubar",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run vite:dev",
    "beforeBuildCommand": "npm run vite:build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Hexdeck",
        "width": 360,
        "height": 460,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "skipTaskbar": true,
        "alwaysOnTop": true,
        "visible": false,
        "focus": false
      },
      {
        "label": "widget",
        "title": "Hexdeck Widget",
        "width": 48,
        "height": 48,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "skipTaskbar": true,
        "alwaysOnTop": true,
        "visible": true,
        "focus": false
      }
    ],
    "macOSPrivateApi": true,
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon-grey.png"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15"
    },
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEU3MDY4ODJDRENFOUVENkEKUldScTdlbmNMSWdHNTB1ekt4Y1JtbUxBK2FlSUpRY0Y3bWtDeVU3Z0JjZ3lBRkRoWFMzMW9FY2UK",
      "endpoints": [
        "https://github.com/wagmint/hexdeck/releases/latest/download/latest.json"
      ]
    }
  }
}
