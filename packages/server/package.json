{
  "name": "@hexdeck/server",
  "version": "0.1.0",
  "description": "Hexdeck local backend server",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/server/main.ts",
    "serve": "tsx src/server/main.ts",
    "hex": "tsx src/cli/index.ts",
    "parse": "tsx src/cli/parse.ts",
    "build": "tsc",
    "compile": "bun build src/standalone.ts --compile --outfile dist/hexdeck-server",
    "compile:dev": "bun build src/standalone.ts --compile --outfile dist/hexdeck-server",
    "test": "vitest"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^25.2.1",
    "@types/ws": "^8.5.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "hono": "^4.11.8",
    "ws": "^8.18.0"
  }
}
